<%= form_for @student, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :roll_no, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :roll_no, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :gender, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :school, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :school, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_1, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone_1, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_2, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone_2, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date_of_birth, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select :date_of_birth, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  students_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
