<%- model_class = Firm -%>
<div class="page-header">
  <h1><%=t '.title', :default => Firm %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:financial_year) %></th>
      <th><%= model_class.human_attribute_name(:academic_year) %></th>
      <th><%= model_class.human_attribute_name(:service_tax_applicable) %></th>
      <th><%= model_class.human_attribute_name(:service_tax_rate) %></th>
      <th><%= model_class.human_attribute_name(:service_tax_number) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @firms.each do |firm| %>
      <tr>
        <td><%= firm.id %></td>
        <td><%= firm.name %></td>
        <td><%= firm.financial_year %></td>
        <td><%= firm.academic_year %></td>
        <td><%= firm.service_tax_applicable %></td>
        <td><%= firm.service_tax_rate %></td>
        <td><%= firm.service_tax_number %></td>
        <td><%=l firm.created_at, format: :long %></td>
        <td>
          <%= link_to firm_path(firm), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to firm_path(firm), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_firm_path,
            :class => 'btn btn-primary' %>
