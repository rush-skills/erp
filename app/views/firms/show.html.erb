<%- model_class = Firm -%>
<div class="page-header">
  <h1><%=t '.title', :default => Firm %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @firm.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:financial_year) %></dt>
      <dd><pre class="prettyprint"><%= @firm.financial_year %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:academic_year) %></dt>
      <dd><pre class="prettyprint"><%= @firm.academic_year %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:service_tax_applicable) %></dt>
      <dd><pre class="prettyprint"><%= @firm.service_tax_applicable %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:service_tax_rate) %></dt>
      <dd><pre class="prettyprint"><%= @firm.service_tax_rate %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:service_tax_number) %></dt>
      <dd><pre class="prettyprint"><%= @firm.service_tax_number %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              firms_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_firm_path(@firm), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              firm_path(@firm),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

