<%- model_class = AdditionalFee -%>
<div class="page-header">
  <h1><%=t '.title', :default => AdditionalFee %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @additional_fees.each do |additional_fee| %>
      <tr>
        <td><%= additional_fee.id %></td>
        <td><%= additional_fee.name %></td>
        <td><%= additional_fee.amount %></td>
        <td><%=l additional_fee.created_at, format: :long %></td>
        <td>
          <%= link_to additional_fee_path(additional_fee), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to additional_fee_path(additional_fee), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_additional_fee_path,
            :class => 'btn btn-primary' %>
